<view class="layout_horizontal">
<view style="margin-right:20rpx;" class="{{aa?'':'empyte'}}">比赛主题</view>
<input placeholder-style="font-size:16px"  maxlength="10" placeholder="请输入活动/比赛主题" bindinput='match_theme_input'>
</input>
</view>
<view style='width:100%;height:2rpx;background:	#DCDCDC;margin-left:20rpx;margin-top:30rpx'></view>

<!--时间选择插件  -->
<view>
<my-date bind:bindSelect="bindSelect"></my-date>
</view>
<view style='width:100%;height:2rpx;background:	#DCDCDC;margin-left:20rpx;margin-top:30rpx'></view>

<view class="layout_horizontal">
<view style="margin-right:20rpx;" class="{{cc?'':'empyte'}}">比赛场地</view>
<input placeholder-style="font-size:16px;" placeholder="请输入比赛场地" bindtap="chooseLocation"  value="{{match_address}}"></input>
</view>
<view style='width:100%;height:2rpx;background:	#DCDCDC;margin-left:20rpx;margin-top:30rpx'></view>

<view  class="layout_horizontal">
<view style="margin-right:20rpx;" >比赛赛制</view>
<view class="{{match_rule=='11人制'?'normal1':'isChecked2'}}" 
bindtap='choose1' style="font-size:88%">11人制</view>
<view class="{{match_rule=='9人制'?'normal2':'isChecked2'}}" bindtap='choose2'style="font-size:90%">9人制</view>
<view class="{{match_rule=='7人制'?'normal3':'isChecked3'}}" bindtap='choose3'style="font-size:90%">7人制</view>
<view class="{{match_rule=='5人制'?'normal4':'isChecked4'}}" bindtap='choose4'style="font-size:90%">5人制</view></view>
<view style='width:100%;height:2rpx;background:#DCDCDC;margin-left:20rpx;margin-top:30rpx'></view>

<view class="layout_horizontal">
<view style="margin-right:20rpx;" >队服颜色</view>
<input maxlength="10" placeholder-style="font-size:16px;" placeholder="请输入队服颜色（选填）" bindinput='match_color_input'></input>
</view>
<view style='width:100%;height:2rpx;background:#DCDCDC;margin-left:20rpx;margin-top:30rpx'></view>

<view class="layout_horizontal">
<view style="margin-right:20rpx;">比赛备注</view>
<input placeholder-style="font-size:16px;" placeholder="有什么要提醒大家（选填）" bindinput='match_remarks_input'></input>
</view>
<view style='width:100%;height:2rpx;background:#DCDCDC;margin-left:20rpx;margin-top:30rpx'></view>


<view style='margin-top:200rpx;'>
<button style="width:90%" type="primary" bindtap='create_button'>发布比赛</button>
</view>
